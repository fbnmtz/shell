_xLIB_XSHELL_=true

# fill author name
for name in "$(git config author.name)" "$USER" '<unknow>' ; do
    if [ -z "$author_name" ]; then
        author_name="$name"
    else
        break
    fi 
done

# fill author email
for email in "$(git config author.email)" "$USER" '<unknow>' ; do
    if [ -z "$author_mail" ]; then
        author_mail="$email"
    else
        break
    fi 
done

# add some iformations to script without our default header
templateInfo(){
    echo -e "
_AUTHOR_=\"$author_mail\"
_CREATED_AT_=\"$(date '+%Y')\"
_CURRENT_VERSION_=\"0.0.1\"
"
}

# default header for scripts
templateHeader(){
    # get current date/time (force locale to US format on date)
    export LC_TIME=en_US.UTF-8 2>/dev/null
    today=$(date "+%A, %Y/%m/%d - %H:%M:%S")
    # print default header template
    echo -e "#
# ############################################################################
# Project: ~/bin
# File...: $(echo $filename | rev | cut -d '/' -f1 | rev)
# Created: $today
# Author.: $author_name, ($author_mail)
# ~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~~·~·~·~·~·~·~·~
# Last Modified: $today
# Modified By..: $author_name, ($author_mail)
# ~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~~·~·~·~·~·~·~·~
# Version: 0.0.1.0
# ~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~·~·~·~·~·~·~·~~·~·~·~·~·~~·~·~·~·~·~·~·~
# Description: 
#  >
# ############################################################################
# HISTORY:
#"
}

